$(document).on("page:change", function () {
    $("input[name=\"song[tag_list]\"]").selectize({
    plugins: ['remove_button'],
    valueField: 'name',
    labelField: 'name',
    searchField: ['name'],
    options: tag_name,
    delimiter: ',',
    persist: false,
    create: true,
    create: function (input) {
        return {
            name: input,
            text: input
        };
    },
    hideSelected: true,
    openOnFocus: false
    });

    $(".selectize-input").css({"font-size": "20px", "line-height": "25px"});
});
