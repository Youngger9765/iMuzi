$("#like-btn-<%=@song.id%>").toggleClass('fa fa-heart');
$("#like-btn-<%=@song.id%>").toggleClass('fa fa-heart-o');

<% if current_user.like_song?(@song) %>
  $("#like_number-<%=@song.id%>").text("<%= @song.like_users.size %>")
  $("#like-word-<%=@song.id%>").text("取消讚")
<% else %>
  $("#like_number-<%=@song.id%>").text("<%= @song.like_users.size %>")
  $("#like-word-<%=@song.id%>").text("按個讚吧")
<% end %>