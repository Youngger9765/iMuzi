<% if current_user %>
<!-- Fixed navbar -->
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li class="active" id="mic-icon">
            <%= link_to image_tag("mic-icon2.png"), root_path %>
            <%=link_to "iMuzi", root_path%>
          </li>
        </ul>

          <ul class="nav navbar-nav navbar-right">
            <li>
              <%=link_to songs_path do%>
                <i class="fa fa-microphone"> 好聲 Battle</i>
              <%end%>
            </li>
            <li>
              <%=link_to '#' do%>
                <i class="fa fa-cog"> 編輯個人檔案</i>
              <%end%>
            </li>
            <li>
              <%=link_to user_path(current_user) do %>
                <i class="fa fa-folder-open"> 已上傳歌曲</i>
              <%end%>
              <%if teacher_comment_alert > 0%>
                <div class="btn btn-warning btn-xs" id="btn-alert"><%=teacher_comment_alert%></div> 
              <%end%>
            </li>
            <li>
              <%= link_to edit_registration_path(:user) do%>
                <i class="fa fa-key"> 修改密碼</i>
              <%end%>
            </li>
            <li id="nav-dropdown" class="dropdown" data-toggle="tooltip" data-placement="bottom" title="瀏覽個人頁面跟修改資料！">
              <a href="#" id="nav-dropdown-a" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <%= image_tag (current_user.photo), style: "width: 40px; height: 40px; display: inline; border-radius: 2px;" %>
              </a>
              <ul id="dropdown-menu" class="dropdown-menu" style="opacity: 0.9;">
                <li>
                  <%= image_tag (current_user.photo), style: "width: 140px; height: 140px; display: inline; border-radius: 10px; position: relative; left: 10px;" %>
                </li>
                <li>
                  <%= link_to mains_path  do %>
                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>修改個人資料
                  <% end %>
                </li>
                <li>
                  <%= link_to mains_path  do %>
                    <span class="fa fa-envelope" aria-hidden="true">聯絡我們</span>
                  <% end %>
                </li>
                <li>
                  <%= link_to('登出', destroy_user_session_path, :method => :delete) %>
                </li>
              </ul>
            </li>
            <% if current_user && current_user.admin?%>
              <li>
                <%= link_to'後台管理', admin_users_path%>
              </li>
            <%end%>
          </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>

<%else%>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%=link_to "iMuz", root_path, :class=>"navbar-brand"%>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li class="active">
            <%=link_to "icon", root_path%>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%=link_to "好聲 Battle", songs_path%>
          </li>
          <%= link_to '登入', register_path, class: "btn btn-info btn-lg" %>

        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>  
<%end%>