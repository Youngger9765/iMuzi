<div class="row">
  <div class="col-md-12 user-profile">
    <h3><%=@user.name%>
      <small><%=@user.nickname%></small>
      <span>
        <%=link_to "新增歌曲", new_song_path, :class=> "btn btn-success"%>
      </span>
    </h3>
    <p class="col-md-6">
      <%=@user.about%>
      
    </p>
  </div>
</div>

<h2>已上傳歌曲</h2>
<div class="row">
    <%@songs.each do |s|%>
      <div class="col-md-3 song">
        <div class="iframe-rwd">
          <iframe src="https://www.youtube.com/embed/<%=s.link%>" frameborder="0">
          </iframe>
        </div>
        <div class="song-footer">
          <div class="link-word">
            <%=link_to s.name, "#"%>
          </div>
          <div class="link-word">
            <small>by</small> <%=link_to @user.name, user_path(@user)%>
          </div>
          <div class="pull-right">
            <%= time_ago_in_words(s.created_at) %> ago.
          </div>
          <div class="clearfix"></div>
          <div class="pull-right" id="like-btn">
            <h3>
              <%= link_to song_path(s), :class => "fa fa-eye" do %>
                <span><%= s.view_counts %></span>
              <% end %>
              <%= link_to song_path(s), :class => "fa fa-commenting-o" do %>
                <span><%= s.comments.size %></span>
              <% end %>
              <%= link_to like_song_path(s), :class => "#{song_like_class(s)} ", :remote => true, :id => "like-btn-#{s.id}" do %>
                <span id ="like_number-<%=s.id%>"><%= s.like_users.size %></span>
              <% end %>
            </h3>
          </div>
          <div class="clearfix"></div>
          <%if current_user == @user%>
            <%=link_to "編輯", edit_song_path(s), :class=> "btn btn-primary btn-xs"%>
            <%=link_to "刪除", song_path(s), method:"delete", :class=> "btn btn-danger btn-xs pull-right",data: { confirm: "確定刪除?" }%>
          <%end%>
          
          <div class="clearfix"></div>
          <br>
          <h3 class="panel-title">老師評論</h3>
          <br>
          <%s.comments.each do |c|%>
            <%if c.link && c.role =="teacher" && c.status == "professional"%>
              <div class="iframe-rwd">
                <iframe src="https://www.youtube.com/embed/<%=c.link%>" frameborder="0">
                </iframe>
              </div>
              <br>
            <%end%>
          <%end%>
        </div>
      </div>
      <%=image_tag s.picture.url%>
    <%end%>
</div>