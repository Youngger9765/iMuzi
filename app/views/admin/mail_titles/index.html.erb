<%= link_to "新增", new_admin_mail_title_path, :class =>"btn btn-success"%>

<table class="table">
  <tr>
    <td>主題</td>
    <td>編輯</td> 
    <td>刪除</td>
  </tr>
  
  <%@mailtitles.each do |title|%>
    <tr>
      <td><%=title.name%></td>
      <td>
        <%= link_to "Edit", edit_admin_mail_title_path(title), :class => "btn btn-success"%>
      </td>
      <td>
        <%=link_to "Delete", admin_mail_title_path(title), method:"delete",data: { confirm: "確定刪除?" }, :class =>"btn btn-danger"%>
      </td>
    </tr>
  <%end%>
</table>